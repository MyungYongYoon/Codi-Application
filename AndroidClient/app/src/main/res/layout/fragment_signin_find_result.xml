<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/signin_findInfo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src ="@drawable/image_logo1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/signin_findInfo_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signin_findInfo_image"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/find_info_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="님의 "/>
        <TextView
            android:id="@+id/find_info_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="는"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/signin_findInfo_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signin_findInfo_content1"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="'"/>
        <TextView
            android:id="@+id/find_info_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_87"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="' 입니다."/>
    </LinearLayout>
    <Button
        android:id="@+id/find_additional_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/signin_findInfo_content2"
        android:layout_marginTop="55dp"
        android:text="비밀번호 찾기"
        android:textSize="16sp"
        android:textColor="@color/purple_dark"
        android:fontFamily="@font/notosanskr_bold_hestia"
        android:background="@drawable/button_5dp_event_rectangle_white" />
    <Button
        android:id="@+id/signin_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/find_additional_btn"
        android:layout_marginTop="16dp"
        android:text="로그인 화면"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_bold_hestia"
        android:background="@drawable/button_5dp_event_rectangle_purple" />
</androidx.constraintlayout.widget.ConstraintLayout>