<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:id="@+id/fragment_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_12dp_white" >
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="회원정보 수정"
        android:textSize="16dp"
        android:textColor="@color/black_87"
        android:fontFamily="@font/notosanskr_bold_hestia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title"
        app:layout_constraintBottom_toTopOf="@id/dialog_button_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp" >
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="이름"
                android:textSize="14sp"
                android:textColor="@color/black_gray"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <EditText
                android:id="@+id/edit_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_underline_black20"
                android:hint="이름을 입력해주세요. (ex.홍길동)"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="12sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:textColorHint="@color/black_50"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/text_birthInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="8dp"
                android:text="생년월일(8자리)"
                android:textSize="14sp"
                android:textColor="@color/black_gray"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <EditText
                android:id="@+id/edit_text_birthInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_underline_black20"
                android:hint="생년월일을 입력해주세요. (ex.20000101)"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="8dp"
                android:maxLength="8"
                android:singleLine="true"
                android:textSize="12sp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:textColorHint="@color/black_50"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/text_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="8dp"
                android:text="성별"
                android:textSize="14sp"
                android:textColor="@color/black_gray"
                android:fontFamily="@font/notosanskr_regular_hestia" />
            <Spinner
                android:id="@+id/spinner_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="8dp"
                android:background="@drawable/edittext_underline_black20"
                android:gravity="start|center_vertical"
                android:spinnerMode="dropdown"
                android:textSize="12sp"
                android:textColor="@color/black_87"
                style="@style/mySpinnerItemStyle" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/height_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/weight_layout"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="키"
                        android:textSize="14sp"
                        android:textColor="@color/black_gray"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <Spinner
                        android:id="@+id/spinner_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:padding="8dp"
                        android:background="@drawable/edittext_underline_black20"
                        android:gravity="start|center_vertical"
                        android:spinnerMode="dropdown"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        style="@style/mySpinnerItemStyle" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/weight_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/height_layout"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="몸무게"
                        android:textSize="14sp"
                        android:textColor="@color/black_gray"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <Spinner
                        android:id="@+id/spinner_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:padding="8dp"
                        android:background="@drawable/edittext_underline_black20"
                        android:gravity="start|center_vertical"
                        android:spinnerMode="dropdown"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        style="@style/mySpinnerItemStyle" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/dialog_text_warning"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:paddingLeft="8dp"
                android:text=""
                android:textColor="@color/pinkish_orange"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialog_left_btn"
            android:background="@drawable/button_5dp_rectangle_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:text="취소"
            android:textSize="14sp"
            android:textColor="@color/purple_dark"
            android:fontFamily="@font/notosanskr_bold_hestia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/start_using_btn" />
        <Button
            android:id="@+id/dialog_right_btn"
            android:background="@drawable/button_5dp_rectangle_purple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:text="수정"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosanskr_bold_hestia" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>