<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back_btn"
                android:layout_width="13dp"
                android:layout_height="23dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_arrow_back"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black_87"
            app:layout_constraintBottom_toBottomOf="@id/sign_up_company_info_state2"
            app:layout_constraintEnd_toEndOf="@id/sign_up_company_info_guide_v80"
            app:layout_constraintStart_toStartOf="@id/sign_up_company_info_guide_v20"
            app:layout_constraintTop_toTopOf="@id/sign_up_company_info_state2" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/sign_up_company_info_guide_v20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"  />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/sign_up_company_info_guide_v80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />
        <ImageView
            android:id="@+id/sign_up_company_info_state1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/background_oval_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/sign_up_company_info_guide_v20"
            app:layout_constraintStart_toStartOf="@id/sign_up_company_info_guide_v20"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_check_white"
            app:layout_constraintBottom_toBottomOf="@id/sign_up_company_info_state1"
            app:layout_constraintEnd_toEndOf="@id/sign_up_company_info_state1"
            app:layout_constraintStart_toStartOf="@id/sign_up_company_info_state1"
            app:layout_constraintTop_toTopOf="@id/sign_up_company_info_state1" />
        <ImageView
            android:id="@+id/sign_up_company_info_state2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/background_oval_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_check_white"
            app:layout_constraintBottom_toBottomOf="@id/sign_up_company_info_state2"
            app:layout_constraintEnd_toEndOf="@id/sign_up_company_info_state2"
            app:layout_constraintStart_toStartOf="@id/sign_up_company_info_state2"
            app:layout_constraintTop_toTopOf="@id/sign_up_company_info_state2" />
        <ImageView
            android:id="@+id/sign_up_company_info_state3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/background_oval_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/sign_up_company_info_guide_v80"
            app:layout_constraintStart_toStartOf="@id/sign_up_company_info_guide_v80"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/sign_up_company_info_state3"
            app:layout_constraintEnd_toEndOf="@id/sign_up_company_info_state3"
            app:layout_constraintStart_toStartOf="@id/sign_up_company_info_state3"
            app:layout_constraintTop_toTopOf="@id/sign_up_company_info_state3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/state_layout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold_hestia"
            android:text="마지막 단계"
            android:textColor="@color/black_87"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="전신 사진 제출 후, 드림님의 코디 평가를 받으실 수 있습니다."
            android:textColor="@color/black_87"
            android:textSize="18sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_layout"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_8dp_rounded_dashed_box"
        android:minHeight="180dp"
        android:paddingHorizontal="60dp"
        android:scaleType="fitXY"
        android:visibility="gone" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_layout"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_8dp_rounded_dashed_box">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/photo_guide_half_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="2dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_add_photo_alternate"
            app:layout_constraintBottom_toTopOf="@id/photo_guide_half_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/notosanskr_regular_hestia"
            android:text="전신 사진 추가"
            android:textColor="@color/black_50"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_guide_half_line" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingVertical="18dp"
        android:background="@drawable/button_5dp_rectangle_black20"
        android:text="제출하고 평가보기"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosanskr_bold_hestia"/>
</androidx.constraintlayout.widget.ConstraintLayout>