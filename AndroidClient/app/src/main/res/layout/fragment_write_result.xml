<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back_btn"
                android:layout_width="13dp"
                android:layout_height="23dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_arrow_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/back_btn"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/notosanskr_regular_hestia"
                android:text="홈으로"
                android:textColor="@color/black_87"
                android:textSize="16sp" />
           <!-- <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/ic_close_warmgray"/>-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/notosanskr_bold_hestia"
        android:text="와! ㅇㅇ님은 패셔니스타 :)"
        android:textColor="@color/black_87"
        android:textSize="24sp" />
    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:paddingHorizontal="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="18dp"
                android:background="@color/light_gray"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[입력정보]"
                    android:textSize="14sp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/black_87"
                    android:fontFamily="@font/notosanskr_regular_hestia"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:id="@+id/info_content_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/info_title"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/info_content_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        android:text="이름"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/info_content_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        android:text="성별"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/info_content_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        android:text="생년월일"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/info_content_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        android:text="선호 스타일"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/info_content_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="유저 착용 사진"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                   <!-- <TextView
                        android:id="@+id/info_content_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        android:text="키"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/info_content_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="몸무게"
                        android:textSize="12sp"
                        android:textColor="@color/black_87"
                        android:fontFamily="@font/notosanskr_regular_hestia" />-->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/info_content_var_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/info_content_text_layout"
                    app:layout_constraintTop_toBottomOf="@id/info_title"
                    android:background="@color/transparent"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/info_content_var1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        android:text="-"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/info_content_var2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        android:text="-"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/info_content_var3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@color/transparent"
                        android:text="-"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <TextView
                        android:id="@+id/info_content_var4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="-"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/photo_image0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/info_content_text_layout"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:background="@color/transparent"
                    android:minWidth="170sp"
                    android:maxHeight="200sp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:visibility="visible" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/image_layout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_gravity="center_horizontal"
                        android:text="상의에 대한 추천 하의"
                        android:layout_marginBottom="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black_60"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <ImageView
                        android:id="@+id/photo_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/transparent"
                        android:maxWidth="150dp"
                        android:maxHeight="200dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/image_layout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:layout_gravity="center_horizontal"
                        android:text="하의에 대한 추천 상의"
                        android:layout_marginBottom="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/black_60"
                        android:fontFamily="@font/notosanskr_regular_hestia" />
                    <ImageView
                        android:id="@+id/photo_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/transparent"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>